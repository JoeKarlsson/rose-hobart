# Rose Hobart Environment Variables
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=production

# Server Configuration
PORT=3001

# Build Configuration
VITE_APP_TITLE=Rose Hobart
VITE_APP_DESCRIPTION=An interactive digital humanities project exploring Joseph Cornell's short film Rose Hobart

# Analytics (Optional)
# VITE_GA_TRACKING_ID=your-google-analytics-id
# VITE_PLAUSIBLE_DOMAIN=your-domain.com

# Feature Flags (Optional)
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_DEBUG_MODE=false

# Video Configuration
VITE_VIDEO_AUTOPLAY=false
VITE_VIDEO_MUTED=true
VITE_VIDEO_LOOP=true

# WebGL Configuration
VITE_WEBGL_ENABLED=true
VITE_SHADER_QUALITY=high
